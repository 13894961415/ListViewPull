<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/ordertitleid"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/white">

        <TextView
            android:id="@+id/order_det_back"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:background="@mipmap/back"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="订单详情"
            android:textColor="@color/black"
            android:textSize="18sp" />
    </RelativeLayout>
    <ScrollView
        android:layout_below="@+id/ordertitleid"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:fillViewport="true"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:id="@+id/odet_fahuorellayid"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="@drawable/kuaidiground"
                >
                <TextView
                    android:id="@+id/detkuaidifhtextid"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="卖家已发货"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="35dp"/>
                <TextView
                    android:id="@+id/detkuaiditimetextid"
                    android:layout_below="@+id/detkuaidifhtextid"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="@color/white"
                    android:textSize="15sp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="5dp"/>

            </RelativeLayout>
            <LinearLayout
                android:id="@+id/detorderkuaidilayid"
                android:layout_below="@+id/odet_fahuorellayid"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:orientation="horizontal"
                android:background="@color/white"
                android:weightSum="10">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/kuaidiicon"/>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="8"
                    android:orientation="vertical"
                    android:weightSum="2">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="2"
                        android:orientation="vertical"
                        android:weightSum="2">
                        <TextView
                            android:id="@+id/detkuaiditextid"
                            android:layout_width="wrap_content"
                            android:layout_height="0dp"
                            android:layout_weight="1.5"
                            android:layout_marginTop="10dp"
                            android:layout_marginLeft="5dp"
                            android:text="已发往长春市快递分拣中心已发往长春市快递分拣中心已发往长春市快递分拣中心已发往长春市快递分拣中心"
                            android:textSize="15dp"
                            android:textColor="@color/green"/>
                        <TextView
                            android:id="@+id/detkuaididatetextid"
                            android:layout_width="wrap_content"
                            android:layout_height="0dp"
                            android:layout_weight="0.5"
                            android:layout_marginLeft="5dp"
                            android:gravity="center_vertical"
                            android:text="2018-10-10   10:10:10"
                            android:textSize="13dp"
                            android:textColor="@color/black"/>
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_weight="0.1"
                            android:background="@color/table_background"/>
                    </LinearLayout>


                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/right_arrow"/>

                </LinearLayout>

            </LinearLayout>


            <LinearLayout
                android:id="@+id/detordertitlelinlayid"
                android:layout_below="@+id/detorderkuaidilayid"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:orientation="horizontal"
                android:background="@color/white"
                android:weightSum="10">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/gpsicon2"/>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="8"
                    android:orientation="vertical"
                    android:weightSum="2">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:weightSum="2">
                        <TextView
                            android:id="@+id/detaddressnameid"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            android:text="收货人：某某某"
                            android:textSize="18dp"
                            android:textColor="@color/black"/>
                        <TextView
                            android:id="@+id/detaddressphoneid"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            android:text="18088880000"
                            android:textSize="18dp"
                            android:textColor="@color/black"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1">
                        <TextView
                            android:id="@+id/detaddressadrid"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:text="地址：吉林省  长春市  二道区  远达大街红星美凯龙2号楼25层2504室"
                            android:textSize="15dp"
                            android:textColor="@color/black"/>

                    </LinearLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/table_background"/>

                </LinearLayout>


            </LinearLayout>
            <LinearLayout
                android:id="@+id/detbottomlinearlayoutid"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_alignParentBottom="true"
                android:orientation="horizontal"
                android:gravity="right|center_vertical"
                android:background="@color/white"
                android:visibility="gone">
                <!--<TextView-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="match_parent"-->
                <!--android:gravity="center_vertical"-->
                <!--android:layout_marginRight="5dp"-->
                <!--android:text="合计："-->
                <!--android:textSize="18sp"/>-->
                <TextView
                    android:id="@+id/detorderyanchangtextid"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="延长收货"
                    android:textSize="16sp"
                    android:layout_marginRight="20dp"
                    android:textColor="@color/gray"
                    android:visibility="gone"/>
                <TextView
                    android:id="@+id/detordertijiaotextid"
                    android:layout_width="80dp"
                    android:layout_height="35dp"
                    android:gravity="center"
                    android:text="确认收货"
                    android:textColor="@color/orange"
                    android:background="@drawable/taobao_radius_ground"
                    android:textSize="16sp"/>
            </LinearLayout>

            <!--<com.wt.beiplayer.utils.ScrollViewContainListView-->
                <!--android:id="@+id/detorderlistviewid"-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="match_parent"-->
                <!--android:layout_below="@+id/detordertitlelinlayid"-->
                <!--android:layout_above="@+id/detbottomlinearlayoutid">-->
            <!--</com.wt.beiplayer.utils.ScrollViewContainListView>-->

        </RelativeLayout>

    </ScrollView>

    <RelativeLayout
        android:id="@+id/payrelativelayoutid"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/ordertitleid"
        android:visibility="gone"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/black"
            android:alpha="0.6">
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="240dp"
            android:background="@drawable/radius_white"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:orientation="vertical"
            android:weightSum="3">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.5"
                android:text="订单支付"
                android:textSize="20sp"
                android:textColor="@color/lime"
                android:gravity="center"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.1dp"
                android:background="@color/gray"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1.7"
                android:weightSum="2"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">
                    <ImageView
                        android:id="@+id/wechatpayimgid"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:src="@drawable/wechatpayicon"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:layout_marginTop="5dp"
                        android:text="微信支付"/>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:orientation="vertical">
                    <ImageView
                        android:id="@+id/alipayimgid"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:src="@drawable/alipayicon"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:layout_marginTop="5dp"
                        android:text="支付宝支付"/>

                </LinearLayout>

            </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.7"
                android:orientation="horizontal"
                android:gravity="left|center_vertical">
                <TextView
                    android:id="@+id/laterpaytextid"
                    android:layout_width="80dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="40dp"
                    android:text="稍后去支付"
                    android:gravity="center"
                    android:textSize="13sp"
                    android:background="@drawable/radius_ground_black"
                    />
            </LinearLayout>




        </LinearLayout>

    </RelativeLayout>



</RelativeLayout>
